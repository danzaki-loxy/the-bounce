<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:background="@drawable/special_text_bg"
                app:cardBackgroundColor="@color/on_green"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="EVM Wallet"
                    android:textColor="@color/blue_700"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/account_balance_wallet_24px"
                    android:padding="4dp"
                    android:fontFamily="@font/aldrich"
                    android:background="@drawable/special_text_bg"
                    android:drawableTint="@color/color_secondary_variant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polygon and Ethereum chains"
                    android:textColor="@color/blue_300"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/abel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/wallet_tv_bg"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="12dp"
                    android:text="0x68c15a055c3e7f4396ee215d7f0ae9f2f1196861"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/blue_700"
                    android:fontFamily="@font/abel"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/content_copy_24px"
                    app:tint="@color/color_primary"
                    android:layout_marginTop="82dp"
                    android:layout_marginStart="350dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View on Polyscan"
                    android:textColor="@color/blue_400"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/abel"
                    android:textSize="14sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                android:background="@drawable/special_text_bg"
                app:cardBackgroundColor="@color/on_green"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Solana Wallet"
                    android:textColor="@color/green_700"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/aldrich"
                    android:drawableStart="@drawable/account_balance_wallet_24px"
                    android:padding="4dp"
                    android:background="@drawable/special_text_bg2"
                    android:drawableTint="@color/color_primary_variant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solana blockchain"
                    android:textColor="@color/green_300"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/abel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/wallet_tv_bg"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="12dp"
                    android:text="3VgGc6kUrmBnSMpGen2g2fzmGsyXzVFeJYChdfac1C3E"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/green_600"
                    android:fontFamily="@font/abel"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/content_copy_24px"
                    app:tint="@color/color_primary"
                    android:layout_marginTop="82dp"
                    android:layout_marginStart="350dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View on Polyscan"
                    android:textColor="@color/green_400"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/abel"
                    android:textSize="14sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>