<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="245dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/color_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_overlay"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="genre"
            android:textColor="@color/orange_300"
            android:textSize="12sp"
            android:fontFamily="@font/abel"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/color_on_background"
            android:textSize="14sp"
            android:layout_gravity="bottom"
            android:padding="8dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/medium_grey"
        app:cardElevation="3dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lock_24px"
            app:tint="@color/blue_300"/>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>