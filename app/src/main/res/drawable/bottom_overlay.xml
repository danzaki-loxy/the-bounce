<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
            android:endColor="#AF000000"
            android:angle="270"
            android:type="linear" />
            <size android:height="30dp" /> <!-- Height of the gradient overlay -->
        </shape>
    </item>

</layer-list>