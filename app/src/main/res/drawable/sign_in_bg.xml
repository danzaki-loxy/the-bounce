<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/orange_900" />
            <solid android:color="#80000000" /> <!-- Semi-transparent dark background when pressed; adjust alpha as needed (80 = 50% opacity) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/orange_900" />
            <solid android:color="#40000000" /> <!-- Semi-transparent light background in default state; adjust alpha as needed (40 = ~25% opacity) -->
        </shape>
    </item>
</selector>